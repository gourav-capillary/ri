<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="defaultButton">
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">0dp</item>
        <item name="android:popupElevation">2dp</item>
        <item name="android:backgroundTint">#E5FF7F</item>
        <item name="cornerRadius">30dp</item>
    </style>

    <style name="tilCustom">
        <item name="cornerRadius">100dp</item>
    </style>

    <style name="messageEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textSelectHandleLeft">@drawable/zero_px_transparent</item>
        <item name="android:textSelectHandleRight">@drawable/zero_px_transparent</item>
        <item name="android:textSelectHandle">@drawable/zero_px_transparent</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="hintTextColor">@color/white</item>
        <item name="android:textAlignment">viewStart</item>
    </style>
</resources>